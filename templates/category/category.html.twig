{% extends 'base.html.twig' %}

{% block body %}

    <h1>Liste des articles par cat√©gorie</h1>

    {%  for category in categories %}
        <a href="{{ path('category_show', {'id': category.id }) }}" > <h2>{% filter upper %} {{ category.name }} {% endfilter %}</h2>

        {%  for article in category.articles %}
            <h3>  {{ article.title }} </h3>
            <p>   {{ article.content }} </p>
        {% endfor %}
    {% endfor %}

{% endblock %}